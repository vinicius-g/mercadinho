<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../templates/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
    <title>Criar produto</title>
</head>
<body>
    <%- include('../templates/header.ejs') %>

    <% if (data.errors) { %>
        <% data.errors.errors.forEach(error => { %>
            <span><%- error.msg %></span>
            <span><%- error.path %></span>
        <% }) %>
    <% } %>

    <main>
        <form action="create-product" method="post">
            <label for="name">Nome</label>
            <input type="text" name="name" id="name">

            <label for="stock">Quantidade em estoque</label>
            <input type="number" name="stock" id="stock" min="0">

            <label for="price">Pre√ßo</label>
            <input type="number" name="price" id="price" min="0" step="0.01">

            <% data.categoryNameList.forEach(categoryName => { %>
                <label for="<%- categoryName.name %>"><%- categoryName.name %></label>
                <input type="checkbox" name="category" id="<%- categoryName.name %>" value="<%- categoryName.id %>">
            <% }) %>

            <button type="submit">Criar</button>
        </form>
    </main>

    <%- include('../templates/footer.ejs') %>
</body>
</html>